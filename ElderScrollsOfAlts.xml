<GuiXml>
<Controls>
 
	<Control name="ESOA_RowTemplate" virtual="true" mouseEnabled="true">
		<OnMouseEnter>
		</OnMouseEnter>
		<OnMouseExit>
		</OnMouseExit>
		<Dimensions x="300" y="200" />
		<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
		<Controls>
			<Texture name="$(parent)_BG" inherits="ZO_ThinListBgStrip" />
			<Label name="$(parent)Name" font="ZoFontGame" verticalAlignment="CENTER" text="ROW">
				<Dimensions x="200" y="30" />
				<Anchor point="TOPLEFT" offsetX="5" offsetY="5" />
			</Label>
      <Texture name="$(parent)_Icon1" textureFile="/esoui/art/icons/store_vampirebite_01.dds">
					<Dimensions x="10" y="24" />
          <Anchor point="TOPLEFT" relativeTo="$(parent)Name" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
      </Texture>      
      <Texture name="$(parent)_Icon2" textureFile="/esoui/art/icons/store_werewolfbite_01.dds">
					<Dimensions x="10" y="24" />
					<Anchor point="TOPLEFT" relativeTo="$(parent)_Icon1" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
      </Texture>      
			<Label name="$(parent)Class" font="ZoFontGame" verticalAlignment="CENTER" text="key">
				<Dimensions x="100" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)_Icon2" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>
			<Label name="$(parent)Level" font="ZoFontGame" verticalAlignment="CENTER" text="name">
				<Dimensions x="50" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)Class" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>
			<Label name="$(parent)Gender" font="ZoFontGame" verticalAlignment="CENTER" text="name">
				<Dimensions x="20" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)Level" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>
			<Label name="$(parent)Race" font="ZoFontGame" verticalAlignment="CENTER" text="msg">
				<Dimensions x="100" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)Gender" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>        
      <Label name="$(parent)Alchemy" font="ZoFontGame" verticalAlignment="CENTER" text="msg">
				<Dimensions x="40" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)Race" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>        
      <Label name="$(parent)Blacksmithing" font="ZoFontGame" verticalAlignment="CENTER" text="msg">
				<Dimensions x="40" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)Alchemy" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>        
      <Label name="$(parent)Clothing" font="ZoFontGame" verticalAlignment="CENTER" text="msg">
				<Dimensions x="40" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)Blacksmithing" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>      
      <Label name="$(parent)Enchanting" font="ZoFontGame" verticalAlignment="CENTER" text="msg">
				<Dimensions x="40" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)Clothing" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>
      <Label name="$(parent)Jewelry" font="ZoFontGame" verticalAlignment="CENTER" text="msg">
				<Dimensions x="40" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)Enchanting" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>
      <Label name="$(parent)Provisioning" font="ZoFontGame" verticalAlignment="CENTER" text="msg">
				<Dimensions x="40" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)Jewelry" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>
      <Label name="$(parent)Woodworking" font="ZoFontGame" verticalAlignment="CENTER" text="msg">
				<Dimensions x="40" y="30" />
				<Anchor point="TOPLEFT" relativeTo="$(parent)Provisioning" relativePoint="TOPRIGHT" offsetX="5" offsetY="0" />
			</Label>
      
		</Controls>
	</Control>

    <TopLevelControl name="ESOA_GUI" inherits="ZO_RightPanelFootPrint" hidden="true">
        <OnInitialized>

        </OnInitialized>
	<Controls>
	<Label name="$(parent)_Label" width="200" height="25" font="ZoFontWinH1" inheritAlpha="true" color="FF0000"
	    wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="BASE!">
	  <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" />
	</Label>
	</Controls>
    </TopLevelControl>

    <TopLevelControl name="ESOA_GUI_PAGE1" inherits="ZO_RightPanelFootPrint" hidden="true">
        <OnInitialized>
        </OnInitialized>
        <OnShow>ElderScrollsOfAlts:SetupGuiPage1(self)</OnShow>
	<Controls>
		<Label name="$(parent)_Label" width="200" height="25" font="ZoFontWinH1" inheritAlpha="true" color="FF0000"
		    wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Select Character To Display:">
		  <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
		</Label>
         
		<Control name="$(parent)_Dropdown" inherits="ZO_ScrollableComboBox" mouseEnabled="true" tier="HIGH">
			<Dimensions y="29" />
			<Anchor point="TOPLEFT" relativeTo="$(parent)_Label" relativePoint="TOPRIGHT" offsetX="10" />
			<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)_Label" relativePoint="BOTTOMRIGHT" offsetX="250" offsetY="5" />
			<OnShow>ElderScrollsOfAlts:GuiSetupDropdown(self)</OnShow>
		</Control>

        <Texture name="$(parent)Divider" textureFile="EsoUI/Art/Miscellaneous/centerscreen_topDivider.dds">
                  <Dimensions y="4" />
                  <Anchor point="TOPLEFT" relativeTo="$(parent)_Label" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="12" />
        </Texture>

  <Control name="$(parent)_SortBar" mouseEnabled="true">
          <Dimensions y="10"/>
          <Anchor point="TOPLEFT" relativeTo="$(parent)Divider" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="12" />
					<Anchor point="TOPRIGHT" relativeTo="$(parent)Divider" relativePoint="BOTTOMRIGHT" offsetX="0"  offsetY="2" />
          
          <Controls>
            <Control name="$(parent)_Sort" verticalAlignment="LEFT">
              <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="0" />
							<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="0" />
									<Controls>
										<Button name="$(parent)_SortName" text="Name" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="220" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="0"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("name")</OnMouseUp>
										</Button>                   
                    <Button name="$(parent)_SortSuper" text="X" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="25" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortName" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp></OnMouseUp>
										</Button>
                    <Button name="$(parent)_SortClass" text="Class" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="105" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortSuper" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("class")</OnMouseUp>
										</Button>                       
                    <Button name="$(parent)_SortLevel" text="Lvl" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="55" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortClass" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("level")</OnMouseUp>
										</Button>                      
                    <Button name="$(parent)_SortGender" text="G" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="25" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortLevel" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("gender")</OnMouseUp>
										</Button>                          
                    <Button name="$(parent)_SortRace" text="Race" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="100" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortGender" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("race")</OnMouseUp>
										</Button>  
                  
                    <Button name="$(parent)_SortAlc" text="Alc" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="50" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortRace" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("alchemy")</OnMouseUp>
										</Button>  
                    <Button name="$(parent)_SortSmth" text="Smth" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="50" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortAlc" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("blacksmithing")</OnMouseUp>
										</Button>  
                    <Button name="$(parent)_SortClth" text="Clth" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="40" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortSmth" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("clothing")</OnMouseUp>
										</Button>  
                    <Button name="$(parent)_SortEnch" text="Ench" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="50" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortClth" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("enchanting")</OnMouseUp>
										</Button>  
                    <Button name="$(parent)_SortJC" text="JC" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="40" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortEnch" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("jewelry")</OnMouseUp>
										</Button>  
                    <Button name="$(parent)_SortProv" text="Prov" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="50" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortJC" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("provisioning")</OnMouseUp>
										</Button>  
                    <Button name="$(parent)_SortWood" text="Wood" font="ZoFontGameLargeBold" verticalAlignment="CENTER" horizontalAlignment="LEFT" mouseEnabled="true">
											<Dimensions x="50" y="30"/>
											<Anchor point="TOPLEFT" relativeTo="$(parent)_SortProv" relativePoint="TOPRIGHT"/>
                      <OnMouseEnter></OnMouseEnter>
											<OnMouseUp>ElderScrollsOfAlts:GuiSort("woodworking")</OnMouseUp>
										</Button>  
                    
                  </Controls>
            </Control>
          </Controls>
          
  </Control>
  
		<Control name="$(parent)_List" inherits="ZO_ScrollList" mouseEnabled="true" tier="HIGH">
			<Dimensions y="100" />
			<Anchor point="TOPLEFT" relativeTo="$(parent)_SortBar" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="32" />
			<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="200" />
		</Control>
    
	</Controls>
    </TopLevelControl>

    <TopLevelControl name="ESOA_GUI_PAGE2" inherits="ZO_RightPanelFootPrint" hidden="true">
        <OnInitialized>

        </OnInitialized>
	<Controls>
	<Label name="$(parent)_Label" width="200" height="25" font="ZoFontWinH1" inheritAlpha="true" color="FF0000"
	    wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="TWO!">
	  <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" />
	</Label>
	</Controls>
    </TopLevelControl>

</Controls>
</GuiXml>
